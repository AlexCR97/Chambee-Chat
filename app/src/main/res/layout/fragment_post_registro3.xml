<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.PostRegistro3Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="Acerca de ti"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="Escribe un poco acerca de ti, así puedes dar una mejor idea de que es lo que buscas."
            android:textSize="18sp" />

        <!-- situacion -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="¿Cuál es tu situación?"
                android:textSize="20sp" />
            <Spinner
                android:id="@+id/sSituacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/fondo_redondeado_blanco_contorno"
                android:padding="4dp"/>
        </LinearLayout><!-- situacion -->

        <!-- estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="¿Cuál es tu estado?, ¿Qué estas buscando?"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/etEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/fondo_redondeado_blanco_contorno"
                android:elevation="8dp"
                android:hint="Estoy buscando..."
                android:imeOptions="actionNext"
                android:padding="15dp"
                android:textSize="20sp"/>
        </LinearLayout><!-- estado -->

        <!-- acerca de mi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Acerca de ti, ¿Quién eres?"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/etAcercaDeMi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/fondo_redondeado_blanco_contorno"
                android:elevation="8dp"
                android:hint="Yo soy..."
                android:imeOptions="actionNext"
                android:padding="15dp"
                android:textSize="20sp"/>
        </LinearLayout><!-- acerca de mi -->

    </LinearLayout>

</RelativeLayout>
